{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src", // all paths are relative to the baseUrl
    "paths": {
      "@app/*": ["*"],
      "@components/*": ["core/components/*"],
      "@constants/*": ["constants/*"],
      "@config/*": ["config/*"],
      "@assets/*": ["../assets/*"],
      "@modules/*": ["modules/*"],
      "@core/*": ["core/*"]
    }
  },
  "exclude": [
    "__tests__/**/*-test.ts"
  ]
}
