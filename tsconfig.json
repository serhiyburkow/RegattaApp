{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src", // all paths are relative to the baseUrl
    "paths": {
      "@app/*": ["*"],
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "exclude": [
    "__tests__/**/*-test.ts"
  ]
}
